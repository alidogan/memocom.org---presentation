<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="assets/favicon/favicon.ico">

        <title>Memocom.org | Home</title>
        
        <!-- Bootstrap core CSS -->
        <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet">

        <!-- Custom styles for this template -->
        
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    
    <body class="widgetshome" ng-app="app">
        <div class="container"ng-controller="DashboardCtrl">
            <div class="page-header"> 
                <a class="pull-right btn btn-primary" ng-click="addWidget()"><i class="glyphicon glyphicon-plus"></i> Add Widget</a> 
                <a class="pull-right btn btn-warning" ng-click="clear()"><i class="glyphicon glyphicon-trash"></i> Clear</a>
                <h1 style="display: inline-block; width: 200px;">
                </select>
            </div>
            <div gridster="gridsterOptions">
                <ul>
                <!--widget-->
                <li gridster-item="widget" ng-repeat="widget in dashboard.widgets" >
                    <div class="box" ng-controller="CustomWidgetCtrl">
                        <div class="box-header"> 
                            {{ widget.name }}
                            <div class="box-header-btns pull-right"> 
                                <a title="settings" ng-click="openSettings(widget)"><i class="glyphicon glyphicon-cog"></i></a> 
                                <a title="Remove widget" ng-click="remove(widget)"><i class="glyphicon glyphicon-trash"></i></a> 
                            </div>
                        </div>
                        <div class="box-content" ng-include src='"/assets/views/"+widget.name + ".html"'></div>
                    </div>
                </li>
                <!--end widget-->
                </ul>
            </div>
        </div>
    </body>

    <footer class="footer">
        <div class="container">
            <p>Memocom.org - 2014</p>
        </div>
    </footer>
        
        <!-- Pop-up -->
        <div id="upload-popup" class="white-popup mfp-hide">
            <div id="upload_form_wrapper">
                <div class="upload_form">
                    <h1>Upload</h1>
                    <p>Kies uw bestanden:</p>
                    <%= form_for(@sha) do |f| %>
                        <%= f.file_field :file_input, multiple: true %>
                        <%= f.text_area :description %><br />
                        <%= f.submit "Upload" %>
                    <% end %>
                </div>
                <div class="loading_status">
                    <img src="assets/Icons/loading.gif" alt="Uploading" title="Uploading"/>
                </div>
                <div class="clear"></div>
            </div> 
        </div>
        <!-- End Pop-up -->
        
        <!-- Bootstrap core JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

        
        <!-- JavaScript functions
        ================================================== -->
        <script type="text/javascript">
            $(function(){ //DOM Ready

                $('.open-popup-link').magnificPopup({
                    type:'inline',
                    midClick: true
                });

            });
        </script>

        <!--Angular gridster scripts-->
        <script src="/assets/angular.js"></script>
        <script src="/assets/ui-bootstrap-tpls.min.js"></script>
        <script src="/assets/angular-gridster.js"></script>
        <script type="text/javascript">
            angular.module('app', ['gridster', 'ui.bootstrap'])
        </script>
        <script src="/assets/script2.js.erb"></script>

    </body>
</html>

